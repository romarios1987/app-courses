<div class="row">
    <div class="col s12">
        <h2>Add course</h2>
        <div class="divider"></div>

        {{#if error}}
            <p class="alert-error">
                {{error}}
            </p>
        {{/if}}

    </div>
</div>

<div class="row">
    <div class="col s12">
        <form action="/courses/add" method="POST" novalidate>
            <div class="input-field">
                <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
                <label for="title">Title Course</label>
                <span class="helper-text" data-error="Enter title course"></span>
            </div>
            <div class="input-field">
                <input id="price" name="price" type="text" class="validate" required value="{{data.price}}">
                <label for="price">Price course</label>
                <span class="helper-text" data-error="Enter price course"></span>
            </div>
            <div class="input-field">
                <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
                <label for="img">URL image</label>
                <span class="helper-text" data-error="Enter image course"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary">Add course</button>
        </form>
    </div>
</div>
