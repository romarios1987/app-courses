<div class="row">
    <div class="col s12">
        <h2>My Profile</h2>
        <div class="divider"></div>
    </div>
</div>

<div class="row">
    <div class="col s12 m6">
        <div class="wrap-avatar">

            {{#if user.avatarUrl}}
                <img class="circle responsive-img z-depth-5" width="300"
                     src="/{{user.avatarUrl}}" alt="{{user.name}}">
            {{else}}
                <img class="circle responsive-img z-depth-5" width="300"
                     src="http://s3.amazonaws.com/37assets/svn/765-default-avatar.png" alt="Default avatar">
            {{/if}}

        </div>
    </div>
    <div class="col s12 m6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Your email: <strong><u>{{user.email}}</u></strong></p>

            <div class="input-field">
                <input id="title" name="name" type="text" class="validate" required value="{{user.name}}">
                <label for="title">Name user</label>
                <span class="helper-text" data-error="Enter your name"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Edit profile</button>

        </form>
    </div>
</div>
