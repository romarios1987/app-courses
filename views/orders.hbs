<div class="row">
    <div class="col s12">
        <h2>My orders</h2>
        <div class="divider"></div>
    </div>
</div>


{{#if orders.length}}

    <div class="row">
        {{#each orders}}

            <div class="col m12 s12 l6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            OrderId <small><strong>{{_id}}</strong></small>
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>
                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}} (x <strong>{{count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>

                        <hr>
                        <p>Total price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

{{else}}
    <p>No orders yet</p>
{{/if}}