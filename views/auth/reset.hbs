<div class="row">
    <div class="col s12">
        <h2>Reset password</h2>
        <div class="divider"></div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        {{#if error}}
            <p class="alert-error">
                {{error}}
            </p>
        {{/if}}
        <form action="/auth/reset" method="POST">
            <div class="input-field">
                <input id="register_email" name="email" type="email" class="validate" required>
                <label for="register_email">Email</label>
                <span class="helper-text" data-error="Enter email"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn red darken-2">Reset password</button>
            <a class="btn" href="/auth/login">Login</a>
        </form>
    </div>
</div>
