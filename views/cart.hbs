<div class="row">
    <div class="col s12">
        <h2>Basket</h2>
        <div class="divider"></div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <div id="cart">
            {{#if courses.length }}

                <table>
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Count</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each courses}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{count}}</td>
                            <td>
                                <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Delete</button>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <p><strong>Total price: <span class="price">{{price}}</span></strong></p>

                <form action="/orders" method="post">
                    <input type="hidden" name="_csrf" value="{{csrf}}">
                    <button type="submit" class="btn">Create order</button>
                </form>
            {{else}}
                <h3 class="center">Cart is empty</h3>
            {{/if}}
        </div>
    </div>
</div>

