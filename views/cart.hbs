<h2>Cart</h2>


<div id="cart">
    {{#if courses.length }}

        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Count</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <p><strong>Total price: <span class="price">{{price}}</span></strong></p>

        <form action="/orders" method="post">
            <button type="submit" class="btn">Create order</button>
        </form>
    {{else}}
        <h3>Cart is empty</h3>
    {{/if}}
</div>
